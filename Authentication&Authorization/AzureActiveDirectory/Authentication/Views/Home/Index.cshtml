@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <p>Azure AD login sample</p>
    @if (User.Identity.IsAuthenticated)
    {
        <span><i class="glyphicon glyphicon-ok text-success"></i>&nbsp; Hello @User.Claims.FirstOrDefault(x => x.Type == "name")?.Value</span>
    }
</div>